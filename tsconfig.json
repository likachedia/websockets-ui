{
    "compilerOptions": {
      "target": "ES6",                          
      // "module": "ES2015",              
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "build",                      
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",  
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build/**/*"]
}